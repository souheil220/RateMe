<% layout('layout2') %>

<div id="wrapper">

    <% include ../partials/sidebar%>



    <div id="page-content-wrapper">
        <% include ../partials/navbar%>
        <div class="container-fluid main_body">
            <a href="#menu-toggle" class="btn btn-default" id="menu-toggle">Toggle Menu</a>
            <div class="ul_links">
                <ul>
                    <li><a href="/home">Home</a></li> |
                    <li><a href="/companies">Employee</a></li> |
                    <li><a href="#">Messages</a></li> 
                </ul>
            </div>
            <div class="bodyDiv">
                <h4>Send Message</h4>
                <input type="hidden" name="receiverId" id="receiverId" class="form-control" value="<%=data._id%>"><br>
                <div class="msg">
                    <div>
                        <div>
                            <ul class="chat">
                                <% chats.forEach(function(val){ %>
                                <li class="left clearfix">
                                    <span class="chat-img pull-left">
                                        <img src="" alt="User Avatar" class="img-circle">
                                    </span>
                                    <div class="chat-body clearfix">
                                        <div class="header">
                                            <strong class="primary-font">   
                                                <%=val.userFromName%>
                                            </strong>
                                            <small class="pull-right">
                                                <span></span><%=moment(val.createdAt).format('LT')%>
                                            </small>
                                        </div>
                                        <p><%=val.body%></p>
                                    </div>
                                </li>
                                <%})%>
                            </ul>
                        </div>
                    </div>
                </div><br>
                <div class="form-group">
                    <textarea id="msg" name="message" class="form-control" placeholder="Enter message" rows="5" cols="60">
                    </textarea>
                </div>
                <div class="form-control">
                    <input type="submit" id="message" value="Send Message" class="form-control btn btn-primary" name="send">
                </div>
            </div>
        </div>
    </div>
</div>
<script src="/js/moment.js"></script>